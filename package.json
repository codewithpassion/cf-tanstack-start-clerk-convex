{
	"name": "cf-tanstack-start",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"serve": "vite preview",
		"test": "vitest run",
		"deploy": "bun run build && wrangler deploy",
		"preview": "bun run build && vite preview",
		"cf-typegen": "wrangler types workers/worker-configuration.d.ts",
		"check:tsc": "bunx tsc --noEmit -p ./tsconfig.json",
		"biome:check": "biome check --fix && biome format --write",
		"check": "bun cf-typegen && bun run build && bun run biome:check && bun run check:tsc",
		"tail:prod": "wrangler tail -e production",
		"tail:staging": "wrangler tail -e staging",
		"convex:dev": "convex dev",
		"convex:setup-env": "bash ./setup_convex_env.sh",
		"convex:deploy": "convex deploy",
		"prepare": "husky"
	},
	"dependencies": {
		"@clerk/backend": "^2.20.0",
		"@clerk/clerk-react": "^5.53.8",
		"@clerk/shared": "^3.31.1",
		"@clerk/tanstack-react-start": "^0.26.9",
		"@cloudflare/vite-plugin": "^1.14.0",
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@hono/clerk-auth": "^3.0.3",
		"@tailwindcss/vite": "^4.0.6",
		"@tanstack/react-devtools": "^0.7.0",
		"@tanstack/react-router": "^1.132.0",
		"@tanstack/react-router-devtools": "^1.132.0",
		"@tanstack/react-router-ssr-query": "^1.131.7",
		"@tanstack/react-start": "^1.132.0",
		"@tanstack/router-plugin": "^1.132.0",
		"convex": "^1.29.3",
		"cookie": "^1.0.2",
		"hono": "^4.10.4",
		"lucide-react": "^0.544.0",
		"mammoth": "^1.11.0",
		"pdf-parse": "^2.4.5",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"srvx": "0.8.15",
		"tailwindcss": "^4.0.6",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"devDependencies": {
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.2.0",
		"@types/node": "^24.10.0",
		"@types/react": "^19.2.0",
		"@types/react-dom": "^19.2.0",
		"@vitejs/plugin-react": "^5.0.4",
		"biome": "^0.3.3",
		"husky": "^9.1.7",
		"jsdom": "^27.0.0",
		"typescript": "^5.7.2",
		"vite": "^7.1.7",
		"vitest": "^3.0.5",
		"web-vitals": "^5.1.0",
		"wrangler": "^4.46.0"
	}
}
